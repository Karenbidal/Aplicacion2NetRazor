@page
@model Aplicacion2NetRazor.Pages.Profesores.BorrarModel
@{
    ViewData["Title"] = "Eliminar profesor";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Editar profesor </h2> 
    </div>
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="Profesor.idProf"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Nombre"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Nombre" class="form-control"/>
                        </div>
                        <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Apellido"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Apellido" class="form-control"/>
                        </div>
                        <span asp-validation-for="Profesor.Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Esp"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Esp" class="form-control"/>
                        </div>
                        <span asp-validation-for="Profesor.Esp" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Fecha_nac"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Fecha_nac" class="form-control"/>
                        </div>
                        <span asp-validation-for="Profesor.Fecha_nac" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Fecha_ing"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Fecha_ing" class="form-control"/>
                        </div>
                        <span asp-validation-for="Profesor.Fecha_ing" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <input type="submit" value="Borrar" onclick="return confirm('¿Está seguro que desea eliminar el profesor?')" class="btn btn-danger btn-primary form-control"/>
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a profesores</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
