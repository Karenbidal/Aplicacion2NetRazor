@page
@model Aplicacion2NetRazor.Pages.Alumnos.BorrarModel
@{
        ViewData["Title"] = "Borrar alumno";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Borrar alumno </h2>
    </div>
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="Alumno.idAlumno"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Nombre"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Nombre" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Apellido"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Apellido" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Fecha_ing"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Fecha_ing" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Fecha_ing" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Fecha_ing"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Fecha_ing" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Fecha_ing" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Hora_ing"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Hora_ing" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Hora_ing" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Cant_cursos"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Cant_cursos" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Cant_cursos" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Alumno.Fecha_egr"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Alumno.Fecha_egr" class="form-control"/>
                        </div>
                        <span asp-validation-for="Alumno.Fecha_egr" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <input type="submit" value="Borrar" class="btn btn-danger form-control" onclick="return confirm('Esta seguro que desea eliminar el curso?')"/>
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a alumnos</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
